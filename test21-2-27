//2.计算1-6的阶乘之和.
int main()
{
	int i = 0;
	int j = 0;
	int time = 0;
	int num = 0;
	int k = 1;
	int decre = 0;
	int decre1 = 0;
	int sum = 0;
	scanf("%d", &time);
	while ((decre = getchar()) != '\n');
	for (j = 1; j<=time ;j++)
	{
		scanf("%d", &num);
		for (i=1,k=1; i<=num; i++)
		{
			k=k*i;
		}
		printf("%d\n", k);
		while ((decre1 = getchar()) != '\n');
		sum = sum + k;
		printf("%d\n", sum);
	}
	return 0;
}
